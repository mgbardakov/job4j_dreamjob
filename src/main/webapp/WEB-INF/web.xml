<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>PostServlet</servlet-name>
    <servlet-class>ru.job4j.dream.servlet.PostServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CandidateServlet</servlet-name>
    <servlet-class>ru.job4j.dream.servlet.CandidateServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>ru.job4j.dream.servlet.IndexServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EditCandidateServlet</servlet-name>
    <servlet-class>ru.job4j.dream.servlet.EditCandidateServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EditPostServlet</servlet-name>
    <servlet-class>ru.job4j.dream.servlet.EditPostServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UploadAvatarServlet</servlet-name>
    <servlet-class>ru.job4j.dream.servlet.UploadAvatarServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DownloadAvatarServlet</servlet-name>
    <servlet-class>ru.job4j.dream.servlet.DownloadAvatarServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteCandidateServlet</servlet-name>
    <servlet-class>ru.job4j.dream.servlet.DeleteCandidateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PostServlet</servlet-name>
    <url-pattern>/posts.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CandidateServlet</servlet-name>
    <url-pattern>/candidates.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EditCandidateServlet</servlet-name>
    <url-pattern>/candidate/edit.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EditPostServlet</servlet-name>
    <url-pattern>/post/edit.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UploadAvatarServlet</servlet-name>
    <url-pattern>/candidate/upload.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DownloadAvatarServlet</servlet-name>
    <url-pattern>/candidate/download.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteCandidateServlet</servlet-name>
    <url-pattern>/candidate/delete.do</url-pattern>
  </servlet-mapping>
</web-app>
